
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Users can create their own user document upon signup,
    // and can only read their own document afterwards.
    match /users/{userId} {
      allow read: if request.auth.uid == userId;
      allow create: if request.auth.uid == userId;
      allow update, delete: if false; // Users cannot update/delete their profile from the client
    }

    // Users can perform all operations (create, read, update, delete) on people
    // documents where the document's userId matches their own auth UID.
    match /people/{personId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }

    // Users can perform all operations on neondara_entries documents where
    // the document's userId matches their own auth UID.
    match /neondara_entries/{entryId} {
      allow read, write: if request.auth.uid == resource.data.userId;
    }
  }
}
