rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Users can only manage their own 'people' documents.
    // They can list documents where their userId matches.
    match /people/{personId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow list: if request.auth != null; // Firestore queries will be filtered by userId in the app
    }

    // Users can only manage their own 'neondara_entries' documents.
    // They can list documents where their userId matches.
    match /neondara_entries/{entryId} {
      allow read, write: if request.auth != null && request.auth.uid == resource.data.userId;
      allow create: if request.auth != null && request.auth.uid == request.resource.data.userId;
      allow list: if request.auth != null; // Firestore queries will be filtered by userId in the app
    }
  }
}