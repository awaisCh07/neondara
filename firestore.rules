rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Rules for the 'people' collection
    match /people/{personId} {
      // Allow a user to read, update, or delete their own document.
      allow read, update, delete: if request.auth.uid == resource.data.userId;

      // Allow a user to create a document for themselves.
      allow create: if request.auth.uid == request.resource.data.userId;
    }
    
    // Allow users to query the 'people' collection, but only for their own documents.
    // This rule is necessary for fetching the list of people.
    match /people/{document=**} {
      allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
    }

    // Rules for the 'neondara_entries' collection
    match /neondara_entries/{entryId} {
      // Allow a user to read, update, or delete their own entry.
      allow read, update, delete: if request.auth.uid == resource.data.userId;
      
      // Allow a user to create an entry for themselves.
      allow create: if request.auth.uid == request.resource.data.userId;
    }

    // Allow users to query the 'neondara_entries' collection, but only for their own documents.
    // This covers all queries on the collection, including filtering by person, occasion, etc.
    match /neondara_entries/{document=**} {
       allow list: if request.auth != null && request.query.resource.data.userId == request.auth.uid;
    }
  }
}
